<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colorpicker_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ColorPicker"
    android:background="@drawable/bg"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/colorpicker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:background="@drawable/borderradius"
            android:paddingLeft="@dimen/createorderpadding"
            android:layout_weight="2"
            android:id="@+id/searchText"
            android:hint="SÃ¶k..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            ><requestFocus /></EditText>
        <ImageButton
            android:id="@+id/searchButton"
            android:background="#000"
            android:alpha="0.8"
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:src="@drawable/ic_action_search"
            android:clickable="true"/>
    </LinearLayout>

    <ListView
        android:background="@drawable/borderradius"
        android:paddingLeft="@dimen/createorderpadding"
        android:paddingTop="@dimen/createorderpadding"
        android:paddingBottom="@dimen/createorderpadding"
        android:alpha="0.8"
        android:id="@+id/searchresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
